<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="FindBall">
     <Sequence name="root">
        <ReactiveSequence>
            <GoBackInField />
        </ReactiveSequence>
        <TurnOnSpot rad="3.14" towards_ball="false"/>
        <ReactiveSequence>
            <GoBackInField />
        </ReactiveSequence>
        <ReactiveSequence _while="!ball_location_known">
          <MoveToPoseOnField _while="player_id == 0"
            x="-1.7" y="0.0" theta="0.0" />
          <MoveToPoseOnField _while="player_id == 1"
            x="-1.7" y="1.0" theta="0.0" />
          <MoveToPoseOnField _while="player_id == 2"
            x="-1.7" y="-1.0" theta="0.0" />
          <Sleep msec="7000" />
      </ReactiveSequence>
      </Sequence>
  </BehaviorTree>
</root>
